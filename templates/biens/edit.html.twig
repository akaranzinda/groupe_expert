{% extends 'base.html.twig' %}

{% block title %}Bienss{% endblock %}

{% block body %}

        <!-- Modal Boxes -->
        <!-- house description-->
        <div id="description" style="margin: 100px 50px 20px 0;" >
            <div class="container-fluid row">
                <div class="modal-content col-xs-12 col-sm-6 col-sm-push-3">
                    <div class="modal-content-header">
                    <i class="fa fa-times animation" data-dismiss="modal"></i>
                    </div>
                    <div class="modal-content-body">
                        <div class="description">

                            <div class="row">
                                <div class="col-xs-12 col-sm-6 col-md-4">
                                    <h4>Informations sur le bien : {{ bien.titre }}</h4>
                                    <div class="box">
                                    <h5>Descripttion<h5>
                                    <p> {{ bien.description}} </p>
                                    <h5>Spécificités<h5>
                                <ul>
                                   
                                    <li><i class="fa fa-chevron-right"></i>&nbsp;&nbsp;Surface : {{ bien.surface }}</li>
                                    <li><i class="fa fa-chevron-right"></i>&nbsp;&nbsp;Nombre de pièce : {{ bien.piece }} </li>
                                    <li><i class="fa fa-chevron-right"></i>&nbsp;&nbsp;Nombre de chambre : {{ bien.chambre }} </li>
                                    <li><i class="fa fa-chevron-right"></i>&nbsp;&nbsp;Ville : {{ bien.ville }} </li>
                                    <li><i class="fa fa-chevron-right"></i>&nbsp;&nbsp;Code Postal : {{ bien.codePostale }} </li>
                                </ul>
                                <p class="footer" style="margin: 15px;">
                                    <span class="title">Price</span><span class="label label-danger text-left">$ 15000</span>
                                </p>
                            </div>
                                </div>
                                <div class="col-xs-6 col-md-8">
                                    <img class="img-responsive img-thumbnail" style="padding:75px;" src="{{asset ('img/selling-img/sel-img2.jpg')}}">
                                     <div>
                                     <p> {{ bien.description}} </p>
                                     </div>
                                </div>
                            </div>
                        </div>
                        <div class="map">
                            <h4>Localisation du bien</h4>
                            <p>Ville : {{ bien.ville }}</p>
                             <p>Code Postal : {{ bien.codePostale }}</p>
                            <div class="box">
                                <div class="google-map"><i class="fa fa-map-marker"></i></div>
                            </div>
                        </div>
                       
                        <div class="map center-block">
                        </div>
                         <div class="container">
                            <div class="row">
                                <p>Si vous etez intéressé par le bien, merci de nous contactez</p>
                                <a href="{{ path('app_login')}}"class="btn btn-danger" style="margin-bottom: 30px;">Identifiez-vous</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <!-- End of house description-->
    
{% endblock %}

