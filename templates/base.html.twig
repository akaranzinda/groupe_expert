<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
		{% endblock %}
	</head>

        {# ********************************************************************* #}
        {# ********************************************************************* #}
		{# ********************************************************************* #}

	<body>
		<header>
			{% block header %}
				<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
					<a class="navbar-brand" href="/">AgenceToutRisk</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="navbarColor02">
						<ul class="navbar-nav mr-auto">
							<li class="nav-item active">
								<a class="nav-link" href="/">Home
									<span class="sr-only">(current)</span>
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('acheter') }}">Acheter</a>
							</li>
							{% if app.user %}
								<li class="nav-item">
									<a class="nav-link btn-primary" href="{{ path('biens_index')}}">Zone admin</a>
								</li>
								<li class="nav-item">
									<a class="nav-link btn-danger" href="{{ path('app_logout')}}">LogOut</a>
								</li>
							{% else %}
								<li class="nav-item">
									<a class="nav-link btn-success" href="{{ path('app_login')}}">Login admin</a>
								</li>
							{% endif %}			
						</ul>
					</div>
				</nav>
			{% endblock %}
		</header>

		{# ********************************************************************* #}
		{# ********************************************************************* #}
		{# ********************************************************************* #}

            <div class="container mt-4"> 
                {% block body %}{% endblock %}
            </div>

		{# ********************************************************************* #}
		{# ********************************************************************* #}
		{# ********************************************************************* #}

			<footer>
				{% block footer %}{% endblock %}
			</footer>

		{# ******************************************************************** #}
		{# ******************************************************************** #}
		{# ******************************************************************** #}

			{% block javascripts %}
				<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
				<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
			{% endblock %}
		</body>
	</html>
