{% extends 'base.html.twig' %}

{% block title %} home {% endblock %}

{% block body %}
 <!-- Intro Section -->
<header id="intro">
    <div class="intro-box-index">
        <div id="header-carousel" class="carousel slide">
            <ol class="carousel-indicators">
                <li data-target="#header-carousel" class="active" data-slide-to="0"></li>
                <li data-target="#header-carousel" data-slide-to="1"></li>
                <li data-target="#header-carousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img class="img-responsive" src="{{ asset('img/carousel/car-img1.jpg')}}">
                    <div class="carousel-caption caption1">
                        <div class="carousel-caption-content">
                            <h1>DEMEURES DE LUXE</h1>
                            <p>Decouvrez nos opportunées</p>
                        </div>
                        <div class="carousel-caption-btn">
                            <a href="{{ path ('home')}}" class="btn btn-custom page-scroll">RECENTS BIENS</a>
                            <a href="{{ path ('acheter') }}" class="btn btn-carousel page-scroll">TOUS NOS BIENS</a>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img class="img-responsive" src="{{ asset('img/carousel/car-img2.jpg')}}">
                    <div class="carousel-caption caption2">
                        <ul class="title">
                            <li class="line"></li>
                            <li>TROUVER</li>
                            <li class="line"></li>
                        </ul>
                        <div class="logo-box">
                            <h1><span> VOTRE INVESTISSEMENT</span></h1><hr>
                            <div class="logo">{...}</div>
                        </div>
                            <h3><span> Voire la suite </h3>
                            <a href="#selling" class="btn animation page-scroll"><i class="fa fa-angle-down"></i></a>
                        </div>
                    </div>
                    <div class="item">
                        <img class="img-responsive" src="{{ asset('img/carousel/car-img2.jpg')}}">
                        <div class="carousel-caption caption3">
                            <div class="carousel-caption-content">
                                <p>Vous avez trouver </p>
                                <div class="logo-box">
                                    <h1><span> LE BIEN DE VOS REVES ? </span></h1><hr>
                                    <div class="logo">{...}</div>
                                </div> 
                            </div>
                        <div class="carousel-caption-btn">
                            <a href="{{ path('app_login')}}" class="btn btn-custom page-scroll">Identifiez-vous</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Intro Section -->
<!-- End of Opportunities Section -->
    <div id="renting" class="containe-fluid" style="margin-top:80px">
        <div class="renting-index-header text-center">
            <ul class="title section-title">
                <li class="line"></li>
                <li><h2>DERNIERES OPPORTUNITES</h2></li>
                <li class="line"></li>
            </ul>
            <p class="text-muted header-para">Craquez pour l'offre de vos rêves</p>
            <i class="fa fa-caret-down"></i>
        </div>
        <!-- Intro Section -->
{% for bien in biens %}
    <div class="renting-index-body container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-8">
                    <h4>{{ bien.titre }} situé à {{ bien.ville }}</h4>
                    <hr>
                    <p>{{ bien.description}}</p>
                    <p>Surface Total : {{ bien.surface}} m²</p>
                    <p>Nombre de chambre : {{ bien.chambre}}</p>

                    <a href="{{ path ('biens_show', {'id': bien.id}) }}" data-toggle="modal">More <i class="fa fa-caret-right"></i></a>
        		</div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                        <img class="img-thumbnail img-responsive" src="{{asset ('img/selling-img/')}}{{bien.image}}">
                </div>
            </div>
            
            <div class="renting-index-footer">
                <div class="row">
                    <div class="col-xs-12 col-sm-10 col-sm-push-1 col-md-12" style="left: -1.666667%;">
                            <p>Decouvrer plus de biens dans notre cataloque</p>
                            <button class="btn btn-custom danger"><a href="{{ path ('acheter') }}"><p style="color:white">VOIR TOUS NOS BIENS</p></a></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End of Renting Section -->
{% endfor %}
{% endblock %}



    
